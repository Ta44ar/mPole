@page "/Account/ResetPasswordConfirmation"
@using MudBlazor

<PageTitle>Reset password confirmation</PageTitle>

<MudGrid>
    <MudItem>
        <MudCard Style="width: 400px" Elevation="3">
            <MudCardHeader>
                <MudText Typo="Typo.h5">Reset password confirmation</MudText>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.body1">
                    Your password has been reset. Please <MudLink Href="Account/Login">click here to log in</MudLink>.
                </MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>
