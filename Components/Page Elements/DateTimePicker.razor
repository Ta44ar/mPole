@inject IStringLocalizer<SharedResource> res

<MudTimePicker Label="@res["Hour"]" PickerVariant="PickerVariant.Dialog" Time="Time ?? TimeSpan.Zero" TimeChanged="OnTimeChanged" />

@code {
    [Parameter]
    public TimeSpan? Time { get; set; }

    [Parameter]
    public EventCallback<TimeSpan?> TimeChanged { get; set; }

    private async Task OnTimeChanged(TimeSpan? newTime)
    {
        Time = newTime;
        await TimeChanged.InvokeAsync(Time);
    }
}
