@inject IStringLocalizer<SharedResource> res

<MudPaper Class="pa-4">
    <MudGrid Class="align-items-center">
        <MudItem xs="3">
            <MudText Typo="Typo.h6" Class="d-flex justify-left">
                @res["ColorLegendTitle"]
            </MudText>
        </MudItem>
        <MudItem xs="4">
            <MudText Typo="Typo.body1" Class="d-flex align-items-center">
                <MudIcon Icon="@Icons.Material.Filled.Circle" Color="Color.Tertiary" Class="mr-2" />
                @res["ColorLegendYourClasses"]
            </MudText>
        </MudItem>
        <MudItem xs="2">
            <MudText Typo="Typo.body1" Class="d-flex align-items-center">
                <MudIcon Icon="@Icons.Material.Filled.Circle" Color="Color.Primary" Class="mr-2" />
                @res["ColorLegendOtherClasses"]
            </MudText>
        </MudItem>
        <MudItem xs="3" Class="justify-end d-flex">
            <MudTooltip Text="@res["MyClasses"]" >
                <MudImage Height="50" Width="50" Src="/images/classesPictureBlack.png" />
            </MudTooltip>
        </MudItem>
    </MudGrid>
</MudPaper>